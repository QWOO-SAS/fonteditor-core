{
    "eslint": {
        "env": {
            "node": true,
            "browser": true
        },

        "rules": {
            "no-console": false,
            "fecs-max-statements": false,
            "max-params": false,
            "max-depth": false,
            "fecs-camelcase": false,
            "fecs-use-computed-property": false,
            "fecs-prefer-destructure": false,
            "fecs-export-on-declare": false,
            "fecs-use-computed-property": false
        },
        "globals": {
            "ArrayBuffer": true,
            "DataView": true,
            "Uint8Array": true,
            "Int8Array": true
        }
    }
}
